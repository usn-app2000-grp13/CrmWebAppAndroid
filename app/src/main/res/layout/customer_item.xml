<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gradientbackground"
            android:elevation="4dp"
            android:fadingEdge="none"
            android:focusable="auto"
            android:padding="4dp"
            android:paddingBottom="8dp">


            <TextView
                android:id="@+id/custFirstname"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/hintFirstName"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/custLastname"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/hintLastName"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/custFirstname"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/custPhone"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="50dp"
                android:text="@string/hintPhone"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/custEmail"
                android:layout_width="173dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:text="@string/hintEmail"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/custPhone"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

