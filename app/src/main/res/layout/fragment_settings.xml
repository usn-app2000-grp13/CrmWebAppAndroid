<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".uicomponents.fragments.SettingsFragment"
            android:orientation="vertical"
            android:layout_margin="25dp">


            <TextView
                android:id="@+id/txtUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="User Info"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintFirstName"
                    android:clickable="false"
                    android:layout_margin="10dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtFname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bjorn"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintFirstName"
                    android:clickable="false"
                    android:layout_below="@+id/tfFirstName"
                    android:layout_margin="10dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keymis"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintEmail"
                    android:clickable="false"
                    android:layout_below="@+id/tfLastName"
                    android:layout_margin="10dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="test@test.test"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfTlf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintPhone"
                    android:clickable="false"
                    android:layout_below="@+id/tfEmail"
                    android:layout_margin="10dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtTlf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="99999999"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfAdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintStreet"
                    android:clickable="false"
                    android:layout_below="@+id/tfTlf"
                    android:layout_margin="10dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/tfStreetNr"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtAdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="EvenVeien" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfStreetNr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tfTlf"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="false"
                    android:hint="@string/hintStreetnumber"
                    android:maxWidth="140dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtStreetNr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="33" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfPostArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tfStreetNr"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/tfPostCode"
                    android:clickable="false"
                    android:hint="@string/hintpostarea"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPostArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="BÃ¸" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfPostCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tfStreetNr"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="false"
                    android:hint="@string/hintPostCode"
                    android:minWidth="100dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPostCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="9999" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfApartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tfPostArea"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="false"
                    android:hint="@string/hintApartment"
                    android:minWidth="100dp"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtApartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnEditMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tfApartment"
                    android:layout_alignParentStart="true"
                    android:text="edit"
                    android:layout_margin="10dp"/>
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tfApartment"
                    android:layout_alignParentEnd="true"
                    android:text="Logout"
                    android:layout_margin="10dp"/>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</layout>
