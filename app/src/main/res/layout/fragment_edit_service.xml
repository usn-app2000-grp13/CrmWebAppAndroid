<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".uicomponents.fragments.services.AppointmentClicked"
            android:orientation="vertical"
            android:padding="25dp"
            android:paddingTop="25dp" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editAppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Service title"
                android:maxWidth="@dimen/custom_max_width"
                android:minWidth="@dimen/custom_min_width"
                android:minHeight="@dimen/custom_min_height"
                android:layout_margin="10dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAppTxtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is a service title"
                    android:inputType="time" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editAppDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:maxWidth="@dimen/custom_max_width"
                android:minWidth="@dimen/custom_min_width"
                android:minHeight="@dimen/custom_min_height"
                android:layout_margin="10dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAppTxtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is a description"
                    android:inputType="text|textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editAppDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duration (Minutes)"
                android:maxWidth="@dimen/custom_max_width"
                android:minWidth="@dimen/custom_min_width"
                android:minHeight="@dimen/custom_min_height"
                android:layout_margin="10dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAppTxtDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 min"
                    android:inputType="time" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editAppPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price (NOK)"
                android:maxWidth="@dimen/custom_max_width"
                android:minWidth="@dimen/custom_min_width"
                android:minHeight="@dimen/custom_min_height"
                android:layout_margin="10dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAppTxtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 kr"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/btnCancel" />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="update" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</layout>
















