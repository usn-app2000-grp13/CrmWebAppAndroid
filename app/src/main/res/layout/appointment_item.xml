<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:backgroundTint="?attr/colorSecondaryVariant"
        app:cardCornerRadius="15dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/minimized_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/calItemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="14:30"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/calItemCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An Bell"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/calItemTime"
                app:layout_constraintEnd_toStartOf="@+id/calItemService"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/calItemTime"
                app:layout_constraintTop_toTopOf="@+id/calItemTime" />

            <TextView
                android:id="@+id/calItemService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haircut adult"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/calItemCustomer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/calItemCustomer"
                app:layout_constraintTop_toTopOf="@+id/calItemCustomer" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calItemService"
                app:srcCompat="@drawable/ic_baseline_expand_more_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>

