<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                tools:context=".tabviewTest.fragment1">


                <TextView
                    android:id="@+id/TvAppointmentInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="@string/appointmentinfo"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:id="@+id/dateTimeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TvAppointmentInfo"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tfDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toLeftOf="@+id/tfTime"
                        android:clickable="false"
                        android:hint="@string/hintDate"
                        app:boxBackgroundColor="?attr/colorBackgroundFloating"
                        app:endIconDrawable="@drawable/ic_baseline_date_range_24"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:editable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="01/01/1999" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tfTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="false"
                        android:hint="@string/hintTime"
                        app:boxBackgroundColor="?attr/colorBackgroundFloating"
                        app:endIconDrawable="@drawable/ic_baseline_access_time_24"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:editable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="15:40" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/CustomerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateTimeContainer"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/TvCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/customer"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/listCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/TvCustomer"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:orientation="vertical" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ServiceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/CustomerContainer"
                    android:padding="20dp"
                    >

                    <TextView
                        android:id="@+id/TvService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/service"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/listService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/TvService"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/employeeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ServiceContainer"
                    android:padding="20dp"
                    >

                    <TextView
                        android:id="@+id/TvEmployee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/employee"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/ListEmployee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/TvEmployee"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical" >

                    </LinearLayout>


                </RelativeLayout>


                <TextView
                    android:id="@+id/TvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/employeeContainer"
                    android:layout_marginTop="15dp"
                    android:text="@string/hintDescription"
                    android:textSize="25sp"
                    android:padding="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tfDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TvDescription"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:clickable="false"
                    android:hint="@string/hintDescription"
                    app:boxBackgroundColor="?attr/colorBackgroundFloating">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clickable="false"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical" />

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tfDescription"
                    android:padding="20dp">

                    <Button
                        android:id="@+id/btnEditAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Edit"
                        android:textColor="?attr/colorOnPrimarySurface"
                        app:icon="@drawable/ic_baseline_create_24"
                        app:iconTint="@android:color/primary_text_dark" />

                    <Button
                        android:id="@+id/btnDeleteAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Delete"
                        android:textColor="@color/design_default_color_on_primary"
                        app:icon="@drawable/ic_baseline_delete_24"
                        app:iconTint="@color/design_default_color_on_primary" />

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
