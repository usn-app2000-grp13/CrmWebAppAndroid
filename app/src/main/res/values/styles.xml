<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- standardMaterialCardView -->
    <style name="standardMaterialCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/smallMargin</item>
    </style>

    <!-- standardLinearLayout -->
    <style name="standardLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/largeMargin</item>
    </style>

    <!-- textInputLayout -->
    <style name="textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/custom_max_width</item>
        <item name="android:minWidth">@dimen/custom_min_width</item>
        <item name="android:minHeight">@dimen/custom_min_height</item>
        <item name="android:layout_margin">@dimen/smallMargin</item>
    </style>

    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- card -->
    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">@dimen/smallMargin</item>
        <item name="android:paddingStart">50dp</item>
    </style>

    <style name="cardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:paddingBottom">@dimen/smallMargin</item>
    </style>

    <style name="cardValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- btn -->
    <style name="btnContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/smallMargin</item>
        <item name="android:padding">@dimen/largeMargin</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- serviceItemCard -->
    <style name="serviceItemCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">@dimen/largeMargin</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="serviceItemCardTextView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>